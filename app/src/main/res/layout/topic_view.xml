<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/topic_list_text_view_layout"
    android:layout_width="match_parent"
    android:background="@color/lightGray"
    android:animateLayoutChanges="true"
    android:layout_height="wrap_content">
    <TextView android:id="@+id/topic_list_text_view"
        android:gravity="start|center_vertical"
        android:focusable="true"
        android:textColor="@color/textColor"
        android:clickable="true"
        android:background="?android:attr/selectableItemBackground"
        android:paddingLeft="@dimen/topic_vertical_margin"
        android:paddingStart="@dimen/topic_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/topic_list_item_vertical_spacing"/>

</LinearLayout>